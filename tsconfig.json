{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src",
    "**/*.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
      "types": ["vite/client"],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@config": [
        "src/theme.config.ts"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}